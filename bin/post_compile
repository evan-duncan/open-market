#!/usr/bin/env bash
# https://github.com/nigma/heroku-django-cookbook/blob/master/bin/post_compile
set -eo pipefail

# The post_compile hook is run by heroku-buildpack-python

echo "-----> Running post-compile hook"

if [ -f bin/install_nodejs]; then
    echo "-----> Running install_nodejs"
    chmod +x bin/install_nodejs
    bin/install_nodejs
fi

if [ -f bin/elm_build ]; then
    echo "-----> Running react_production_build"
    chmod +x bin/react_production_build
    bin/react_production_build
fi

echo "-----> Post-compile done"